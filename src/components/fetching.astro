import products from '../../api/products.json'
let destacados = products.filter(item => item.destacados === true).slice(0, 6);
console.log(destacados);
---
<article class="info">
    <h1 class="text-3xl font-bold dark:text-white title-hidden mb-2">Productos destacados</h2>
    <div class="w-full mb-5 p-5 border dark:border-gray-700 rounded-lg title flex justify-between items-center">
        <h1 class="text-3xl font-bold dark:text-white title-block">Productos destacados</h2>
        <p class="destacadosURL"><span>[GET]</span>  https://netshop-api.vercel.app/api/dest</p>
    </div>
    <div class="cardGrid">
        { destacados.map(product => (
            <div class="flex flex-col max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 card">
                <a href="#">
                    <img class="rounded-t-lg" src={product.img} alt={product.nombre} />
                </a>
                <div class="p-5 flex flex-col justify-between grow">
                    <a href="#">
                        <h5 class="mb-2 font-bold tracking-tight text-gray-900 dark:text-white">{product.nombre}</h5>
                    </a>
                    <div>
                        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{product.moneda} {product.precio}</p>
                        <a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                            Detalles
                            <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div> 
            ))    
        }
    </div>
    <h1 class="text-3xl font-bold dark:text-white title-hidden">Todos los productos</h2>
    <div class="w-full mt-5 p-5 border dark:border-gray-700 rounded-lg title flex justify-between items-center">
        <h1 class="text-3xl font-bold dark:text-white title-block">Todos los productos</h2>
        <p class="destacadosURL"><span>[GET]</span>  https://netshop-api.vercel.app/api/products</p>
    </div>
    <h1 class="text-3xl font-bold dark:text-white title-hidden">Producto por ID</h2>
    <div class="w-full mt-5 p-5 border dark:border-gray-700 rounded-lg title flex justify-between items-center">
        <h1 class="text-3xl font-bold dark:text-white title-block">Producto por ID</h2>
        <p class="destacadosURL"><span>[GET]</span>  https://netshop-api.vercel.app/api/products/id</p>
    </div>
</article>

<style>
    .info {
        margin-block: 100px;
    }

    .info .title {
        background-color: rgb(24, 23, 23);
    }

    .title-hidden {
        display: none;
    }

    .cardGrid {
        display: grid;
        grid-template-columns: repeat(
            auto-fit,
            minmax(250px, 1fr)
        );
        gap: 20px;
    }

    .destacadosURL {
        color: rgb(179, 179, 179);
        font-size: 1.25rem;
    }

    .destacadosURL span {
        margin-right: 10px;
        color: white;
        font-weight: bold;
    }

    @media (max-width: 950px) {
        .title-hidden {
            display: block;
            margin-top: 20px;
        }

        .title-block {
            display: none;
        }

        .cardGrid {
            display: flex;
            flex-direction: column;
        }

        .card {
            max-width: 100%;
        }
    }

    @media (max-width: 550px) {
		.destacadosURL {
			font-size: 1rem;
		}
	}
</style>