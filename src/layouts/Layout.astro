---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Nav from '../components/nav.astro';
import { ViewTransitions } from 'astro:transitions';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Netshop API es un proyecto pensado para que cualquier dev que necesite acceder a fichas de productos tecnológicos
		lo pueda hacer de forma fácil." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="src/assets/netshop-browser.svg" type="image/x-icon">
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />
		<title>{title}</title>
	</head>
	<body>
		<Nav />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	html {
		font-family: system-ui, sans-serif;
		background: #0a0707;  /*13151a*/
		background-image: url('../assets/fondo/fondo.png');
		background-attachment: fixed;
		scroll-behavior: smooth;
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	body {
		margin: 0;
	}

	a {
		color: rgb(219, 201, 201); /* rgb(201, 202, 219) */
		font-size: 1.1rem;
		text-decoration: none;
		transition: .2s;
	}
</style>
