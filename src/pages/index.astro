---
import Layout from '../layouts/Layout.astro';
import Github from '../assets/github.svg';
import Logo from '../assets/netshop-light.svg';
import Linkedin from '../assets/linkedin.svg';
import Fetching from '../fetching/fetching.astro';
---

<Layout title="Netshop API">
	<nav class="flex justify-center">
		<div class="flex items-center justify-between">
			<div class="flex items-center gap-10">
				<a href="/" aria-label="Enlace a Inicio"><img class="logoNav" src={Logo.src} alt="Logo de NetShop"/></a>
				<a href="/docs" aria-label="Enlace a documentaci칩n de la API">Documentaci칩n</a>
				<a href="https://netshopuy.vercel.app/" target="_blank" aria-label="Enlace a ecommerce NetShop">P치gina de ejemplo</a>
			</div>
			<div class="flex items-center gap-5">
				<a href="https://github.com/facuhdezz/fakestore-api" target="_blank" aria-label="Enlace a repositorio en GitHub"><img class="redesNav" src={Github.src} alt="Logo de GitHub"/></a>
				<a href="https://www.linkedin.com/in/facu-hernandez/" target="_blank" aria-label="Enlace a LinkedIn"><img class="redesNav" src={Linkedin.src} alt="Logo de LinkedIn"/></a>
			</div>
		</div>
	</nav>
	<main>
		<div class="flex justify-center">
			<div class="flex justify-between items-center">
				<div class="text-center">
					<h1>NetShop API</h1>
					<p>Acceda a una variedad de productos computacionales para su tienda de Ecommerce.</p>
					<div class="flex gap-5 mt-10 justify-center">
						<a class="docs-btn btn" href="/docs">Documentaci칩n</a>
						<a class="products-btn btn" href="/api/products">Ver Productos</a>
					</div>
				</div>
				<div>
					<img class="logoMain" src={Logo.src} alt="Logo de NetShop"/>
				</div>
			</div>
		</div>
		<Fetching />
	</main>
</Layout>

<style>
	nav {
		background-color: #0a0000; /* 0b0d11 */
		position: sticky;
		height: 80px;
	}

	nav > div {
		width: 60%;
	}

	a {
		color: rgb(219, 201, 201); /* rgb(201, 202, 219) */
		font-size: 1.1rem;
		text-decoration: none;
		transition: .2s;
	}

	nav a:hover {
		color: rgb(143, 120, 120); /* rgb(120, 122, 143) */
	}

	.logoNav {
		width: 60px;
	}

	img.redesNav {
		width: 30px;
		transition: .2s;
	}

	img.redesNav:hover {
		opacity: 0.7;
	}

	main {
		margin-top: 100px;
	}

	main > div {
		width: 960px;
		margin: auto;
	}

	main h1 {
		background: linear-gradient(
			45deg,
			rgb(150, 0, 0),
			white 80%
		);
		-webkit-background-clip: text;
    	-webkit-text-fill-color: transparent;
		font-size: 4.3rem;
		font-weight: bold;
		margin-bottom: 20px;
	}

	main p {
		font-size: 1.5rem;
		margin: 0;
		color: rgb(206, 206, 206);
	}

	.btn {
		background-color: #0a0606;
		padding: 20px;
		border: 1px solid gray;
		border-radius: 30px;
	}

	.btn:hover {
		background-color: #000000;
	}

	@media (max-width: 1200px) {
		main > div {
			width: 80vw;
		}
	}
</style>