---
import Layout from '../layouts/Layout.astro';
import Fetching from '../components/fetching.astro';
import Logo from '../assets/netshop-light.svg';
---

<Layout title="Netshop API">
	<main>
		<article class="flex justify-center">
			<div class="flex justify-between items-center">
				<div class="text-center">
					<h1>NetShop API</h1>
					<p>Acceda a una variedad de productos computacionales para su tienda de Ecommerce.</p>
					<div class="flex gap-5 mt-10 justify-center btn-div">
						<a class="btn" href="/document">Documentaci√≥n</a>
						<a class="btn" href="/api/products" target="_blank">Ver Productos</a>
					</div>
				</div>
				<img class="logoMain" src={Logo.src} alt="Logo de NetShop"/>
			</div>
		</article>
		<Fetching />
	</main>
</Layout>

<style>

	main {
		margin-top: 200px;
	}

	main :global(article) {
		margin-inline: 400px;
	}

	h1 {
		background: linear-gradient(
			45deg,
			rgb(150, 0, 0),
			white 80%
		);
		-webkit-background-clip: text;
    	-webkit-text-fill-color: transparent;
		font-size: 4.3rem;
		font-weight: bold;
		line-height: 5rem;
		margin-bottom: 20px;
	}

	p {
		font-size: 1.5rem;
		margin: 0;
		color: rgb(206, 206, 206);
	}

	.btn {
		background-color: #0a0606;
		padding: 20px;
		border: 1px solid gray;
		border-radius: 30px;
	}

	.btn:hover {
		background-color: #c66969;
	}

	.logoMain {
		width: 400px;
	}

	@media (max-width: 1650px) {
		main :global(article) {
			margin-inline: 200px;
		}
	}

	@media (max-width: 1250px) {
		.logoMain {
			width: 300px;
		}

		p {
			font-size: 1.2rem;
		}
	}

	@media (max-width: 1150px) {
		.logoMain {
			display: none;
		}
	}

	@media (max-width: 750px) {
		main {
			margin-top: 100px;
		}

		main :global(article) {
			margin-inline: 100px;
		}
	}

	@media (max-width: 550px) {
		main :global(article) {
			margin-inline: 50px;
		}

		.btn-div {
			flex-direction: column;
		}
	}
</style>